{
    "name": "protocomm",
    "version": "0.1.1",
    "description": "Bi-directional type-safe RPC and events for Node.js and Browser",
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "tsc -b -w",
        "compile": "tsc -b",
        "lint": "eslint --ext=.js,.ts,.vue --cache .",
        "test": "NODE_ENV=test mocha",
        "preversion": "npm run lint",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/inca/protocomm.git"
    },
    "keywords": [
        "rpc",
        "services",
        "event",
        "typesafe"
    ],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@types/mocha": "^8.2.3",
        "@types/node": "^16.3.1",
        "@types/ws": "^7.4.6",
        "@ubio/eslint-config": "^1.1.6",
        "eslint": "^7.30.0",
        "mocha": "^9.0.2",
        "pre-commit": "^1.2.2",
        "typescript": "^4.3.5",
        "ws": "^7.5.3"
    },
    "dependencies": {
        "airtight": "^0.4.0",
        "typesafe-event": "^1.0.1",
        "typesafe-exception": "^1.0.1"
    }
}
